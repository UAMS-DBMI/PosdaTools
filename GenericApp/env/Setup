# or at http://posda.com/License.html
#
if [ $# -eq 1 ]; then
  export TEMP_ROOT=$1;
  if [ ${TEMP_ROOT:0:1} != "/" ]; then
    export TEMP_ROOT=~/$1;
  fi
  if [ -d $TEMP_ROOT ]; then
    export GENERIC_APP_HOME=$TEMP_ROOT;
  else
    echo $TEMP_ROOT is not a directory;
    exit -1;
  fi
fi
export PERL5LIB=$GENERIC_APP_HOME/include:$PERL5LIB
export PATH=$GENERIC_APP_HOME/bin:\
$PATH
