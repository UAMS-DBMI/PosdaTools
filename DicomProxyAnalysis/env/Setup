# Part of the Posda package
# Posda may be copied only under the terms of either the Artistic License or the
# GNU General Public License, which may be found in the Posda Distribution,
# or at http://posda.com/License.html
#
if [ $# -eq 1 ]; then
  export TEMP_ROOT=$1;
  if [ ${TEMP_ROOT:0:1} != "/" ]; then
    export TEMP_ROOT=~/$1;
  fi
  if [ -d $TEMP_ROOT ]; then
    export DICOM_PROXY_ANALYSIS_HOME=$TEMP_ROOT;
  else
    echo $TEMP_ROOT is not a directory;
    exit -1;
  fi
fi
export PERL5LIB=$DICOM_PROXY_ANALYSIS_HOME/include:$PERL5LIB
export PATH=$DICOM_PROXY_ANALYSIS_HOME/bin:$PATH
